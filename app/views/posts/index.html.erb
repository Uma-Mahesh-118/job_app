<h1 class="text-center mt-4"> List of all Job Posts</h1>
<p class= 'text-center'>
    <% if logged_in?%>
        <%= link_to 'Create New Job Post', new_post_path, {:class=>"btn btn-primary"} %>
    <% end%>
</p> 
<%= render 'paginate'%>
<div class="flickr_pagination">    
    <%= will_paginate @posts, :container => false %>
</div>

<div class="container">
    <div class="row justify-content-md-center">
        <% @posts.each do |post| %>
            <div class="col-5 mt-4 ">
                <div class="card text-center shadow mb-5 bg-white rounded ">
                    <div class="card-header font-italic">
                        <h5 class="card-title"> <%= link_to post.name, post_path(post), {:class=>"text-success"} %></h5> 
                    </div>
                    <div class="card-body">
                        by <%= link_to post.company.name.capitalize, company_path(post.company) , {:class=>"text-info"}%>
                        <br>
                        Description: <%= truncate(post.description, length: 20) %>
                        <br>
                        <%= link_to 'Show', post_path(post), {:class=>"btn btn-outline-success mt-2"} %>
                    </div> 
                    <div class="card-footer text-muted">
                        <small> Posted <%=time_ago_in_words(post.created_at)%> ago</small>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<div class="flickr_pagination mb-4">    
    <%= will_paginate @posts, :container => false %>
</div>

<br/>
<br/><br>
</div>