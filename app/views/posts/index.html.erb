<h1 class="text-center mt-4"> List of all Job Posts</h1>
<p class= 'text-center'>
    <%= link_to 'Create New Job Post', new_post_path, {:class=>"btn btn-primary"} %>
</p> 
<%= render 'paginate'%>

<div class="flickr_pagination">    
    <%= will_paginate @posts, :container => false %>
</div>
<div class="container">
<% @posts.each do |post| %>
    <div class="row justify-content-md-center ">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by <%= link_to post.company.name, company_path(post.company) , {:class=>"text-info"}%>
                    <hr>
                    <h5> Skills: </h5>
                    <% if post.skills.any? %>
                            <%= post.skills.first%>
                    <% end %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"> <%= link_to post.name, post_path(post), {:class=>"text-success"} %></h5>
                    <p class="card-text"> <%= truncate(post.description, length: 50)%></p>
                    <%= link_to 'Show', post_path(post), {:class=>"btn btn-outline-success"} %>
                    <% if logged_in? && ( post.company == current_user )%>
                        <%= link_to 'Edit', edit_post_path(post), {:class=>"btn btn-outline-info"}%>
                        <%= button_to 'Delete', post_path(post), {method: :delete , :class=>"btn btn-outline-danger"}%>
                    <% end %>
                </div> 
                <div class="card-footer text-muted">
                    <small> Created <%=time_ago_in_words(post.created_at)%> ago, Edited <%=time_ago_in_words(post.updated_at)%> </small>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class="flickr_pagination mb-4">    
    <%= will_paginate @posts, :container => false %>
</div>

<br/>
<br/><br>
</div>