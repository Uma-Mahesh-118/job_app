<h1 class="text-center mt-4"> Companies List</h1>
<%= render 'paginate'%>

<div class="flickr_pagination">    
    <%= will_paginate @companies, :container => false %>
</div>

<div class="container">
<div class="row justify-content-md-center ">
    <% @companies.each do |company| %>
        <div class="col-5 mt-4 ">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header ">
                    <h3 class="card-title"><%= link_to company.name, company_path(company), {:class=>"text-success"} %> </h3>
                </div>
                <div class="card-body">
                    <h6> email    : <%= company.email%></h6>
                    <h6> Job posts :<%= company.posts.count%> </h6>
                    <hr>
                    <%= link_to 'View Profile', company_path(company), {:class=>"btn btn-outline-success"} %>
                    <% if logged_in? && ( company == current_user )%>
                        <%= link_to 'Edit Profile', edit_company_path(company), {:class=>"btn btn-outline-info"}%>
                    <% end%>
                </div> 
                <div class="card-footer text-muted">
                    <small> Account created <%=time_ago_in_words(company.created_at)%> ago</small>
                </div>
            </div>
        </div>
    <% end %>
</div>
<div class="flickr_pagination mb-4">    
    <%= will_paginate @articles, :container => false %>
</div>
</div>