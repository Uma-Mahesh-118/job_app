<div class="container text-center">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @applicant %>
            <%= form_with(model: @applicant, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class="form-group row">
                    <div class="col-2">
                    <%= f.label :name , {:class=> "col-2 col-form-label text-light"}%> <br/>
                    </div>
                    <div class="col-10">
                        <%= f.text_field :name,  {:class=>"form-control shadow rounded", :placeholder=>'Enter a Name'}%>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class= "col-2">
                        <%= f.label :email , {:class=> "col-2 col-form-label text-light"}%> <br/>
                    </div>
                    <div class="col-10">
                        <%= f.email_field :email, {:class=>"form-control shadow rounded", :placeholder=>'Enter your email'} %>
                    </div>
                </div>
                <br>
                <div class="form-group row ">
                    <div class="col-2">
                        <%= f.label :skills , {:class=> "col-2 col-form-label text-light"}%> <br/>
                    </div>
                    <div class="col-2">
                        <%= f.collection_select :skills, Skill.all, :id, :name,  {prompt: "Make a selection from the below (can be empty)"}, { :multiple=> true, size: 5, class: "custom-select shadow rounded" } %>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-2">
                        <%= f.label :password , {:class=> "col-2 col-form-label text-light"}%> <br/>
                    </div>
                    <div class="col-10">
                        <%= f.password_field :password, {:class=>"form-control shadow rounded", :placeholder=>'Enter the password'} %>
                    </div>
                </div>
                <div>
                    <%= f.submit (@applicant.new_record? ? "Sign-Up!" : "Update Profile" ) , class: "btn btn-primary btn-lg shadow" %>
                </div>
            <% end %>
        </div>
        <div class="mb-10">
            <%= link_to '[ Cancel and return to companies listing ]', applicants_path, {:class=> "btn btn-outline-info" , :style=> "background-color:'white'"} %>
        </div>
    </div>
 </div>
